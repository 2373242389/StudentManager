<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@drawable/wx_item_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/jiantou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="@mipmap/rightjiantou"/>
            <TextView
                android:layout_toLeftOf="@+id/fanxiegang"
                android:text="31"
                android:id="@+id/stuTureNumber"
                android:textColor="@color/image_selector_red"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:layout_toLeftOf="@+id/renshu"
                android:text="/"
                android:id="@+id/fanxiegang"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/text"
                android:layout_toLeftOf="@+id/stuTureNumber"
                android:text="人数："
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>
            <TextView
                android:layout_toLeftOf="@+id/jiantou"
                android:text="32"
                android:id="@+id/renshu"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="50dp"/>

            <TextView
            android:id="@+id/teacher_course_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/jiantou"
            android:gravity="center_vertical"
            android:textColor="@color/black"
                android:text="计算机组成原理"
            android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/teacher_course_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="计算机161，162"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>