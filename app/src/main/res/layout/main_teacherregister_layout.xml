<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sea" >
    <!-- 控件在靠左边：水平布局+
        android:gravity="center_vertical"
        android:orientation="horizontal" > -->
    <!--控件靠右边：垂直布局+right
        控件靠左边：垂直布局+left -->
    <!--菜单-->
    <LinearLayout
        android:id="@+id/teacher_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right|center"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/teacher_login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/title_layout"
        android:gravity="center" >

        <!--学号布局-->
        <FrameLayout
            android:id="@+id/teacherNo_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <!--学号编辑框-->
            <EditText
                android:id="@+id/teacher_register_input_No"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_margin="10dp"
                android:minHeight="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:hint="请输入8位学工号"
                android:textColorHint="#95A1AA"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@drawable/edittext_selector"
                android:singleLine="true" />

            <!--用户图标-->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/user"
                android:visibility="visible" />

        </FrameLayout>
        <!--姓名行布局-->
        <FrameLayout
            android:id="@+id/teacher_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/teacherNo_layout"
            android:gravity="center">

            <!--用户名编辑框-->
            <EditText
                android:id="@+id/teacher_register_input_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_margin="10dp"
                android:minHeight="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:hint="真实姓名"
                android:textColorHint="#95A1AA"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@drawable/edittext_selector"
                android:singleLine="true" />

            <!--用户图标-->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/user"
                android:visibility="visible" />
        </FrameLayout>

        <!--密码行布局-->
        <FrameLayout
            android:id="@+id/teacher_password_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_name_layout"
            android:layout_marginTop="0dp"
            android:gravity="center" >

            <!--密码编辑框-->
            <EditText
                android:id="@+id/teacher_register_input_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:minHeight="40dp"
                android:maxLength="20"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:hint="密码"
                android:textColorHint="#95A1AA"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@drawable/edittext_selector"
                android:inputType="textPassword"
                android:singleLine="true" />

            <!--密码图标-->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/passwd" />

        </FrameLayout>
        <!--确认密码编辑框-->
        <FrameLayout
            android:id="@+id/teacher_password_check_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_password_layout"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <!--密码编辑框-->
            <EditText
                android:id="@+id/teacher_register_check_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:minHeight="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#95A1AA"
                android:textCursorDrawable="@drawable/edittext_cursor" />

            <!--密码图标-->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/passwd" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/sex_choice_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_password_check_layout"
            android:layout_marginTop="0dp"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:text="性别:"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white" />
            <RadioGroup
                android:id="@+id/teacher_sex_rg"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingLeft="100dp">
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="男" />
                <RadioButton
                    android:id="@+id/femle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="女"/>
            </RadioGroup>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/teacher_department_choice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex_choice_layout"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/teacher_department_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="0dp"
                    android:entries="@array/department"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/teacher_age_choice_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/teacher_department_choice_layout"
            android:layout_marginTop="0dp"
            android:gravity="center">

            <TextView
                android:id="@+id/teacher_birthday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="请点击选择出生日期"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:background="@drawable/edittext_selector"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/teacher_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@id/teacher_age_choice_layout"
            android:gravity="center">

            <!--用户名编辑框-->
            <EditText
                android:id="@+id/teacher_register_input_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_margin="10dp"
                android:minHeight="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:hint="手机号"
                android:inputType="number"
                android:textColorHint="#95A1AA"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@drawable/edittext_selector"
                android:singleLine="true" />

            <!--用户图标-->
            <ImageView
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/telephone"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/teacher_check_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_below="@id/teacher_phone_layout"
            android:gravity="center">

            <!--验证码编辑框-->
            <EditText
                android:id="@+id/teacher_check_num"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_margin="10dp"
                android:minHeight="40dp"
                android:paddingLeft="40dp"
                android:paddingRight="60dp"
                android:textColorHint="#95A1AA"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:background="@drawable/edittext_selector"
                android:singleLine="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:background="@drawable/button_selector"
                android:text="获取验证码"
                android:textColor="@android:color/white"/>
        </FrameLayout>
        <!--确认按钮-->
        <Button
            android:id="@+id/teacher_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/teacher_check_phone_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"

            android:text="确认"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:background="@drawable/button_selector"
            android:gravity="center" />
    </RelativeLayout>
</RelativeLayout>

