<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@drawable/wx_item_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/item_stuNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="201600845"
                android:textColor="@color/tab_text_color_selector"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/item_stuName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"

                android:textColor="@color/tab_text_color_selector"
                android:text="于彪彪"
                android:textSize="18sp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/item_course"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingBottom="10dp"
            android:text="电器与信息工程学院"
            android:textColor="@color/tab_text_color_selector"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/item_homeworkDecs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="第一次作业"
            android:textColor="@color/tab_text_color_selector"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>